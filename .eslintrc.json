{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-var": 1,
        "no-case-declarations": 0,
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 90
            }
        ],
        "indent": [
            "error",
            2
        ],
        "no-lonely-if": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "func-style": [
            "error",
            "declaration",
            {
                "allowArrowFunctions": true
            }
        ],
        "require-await": "error",
        "prefer-arrow-callback": "error"
    }
}